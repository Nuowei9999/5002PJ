{  
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": { "url": "https://raw.githubusercontent.com/Nuowei9999/5002PJ/master/data/wildfire_frequency%26Size_v1.csv" },
    "vconcat": [{
        "width": 400,
        "height": 200,
        "mark": "area",
        "encoding": {
            "x": {
                "field": "Date",
                "type": "temporal",
                "scale": { "domain": { "param": "brush" } },
                "axis": { "title": "", "tickCount": 10 }
            },
            "y": { "field": "frequency", "type": "quantitative" }
        }
    }, {
        "width": 400,
        "height": 100,
        "mark": "area",
        "params": [{
            "name": "brush",
            "select": { "type": "interval", "encodings": ["x"] }
        }],
        "encoding": {
            "x": {
                "field": "Date",
                "type": "temporal",
                "axis": { "tickCount": 10 }
            },
            "y": {
                "field": "frequency",
                "type": "quantitative",
                "axis": { "tickCount": 3, "grid": false }
            }
        }
    }]
}